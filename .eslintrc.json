{
  "extends": "airbnb",
  "ignorePatterns": [
    "bundle.js",
    "tailwind.config.js"
  ],
  "rules": {
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [
          "state",
          "event"
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@components",
            "./client/src/components"
          ],
          [
            "@assets",
            "./client/src/assets"
          ],
          [
            "@reducers",
            "./client/src/reducers"
          ],
          [
            "@fonts",
            "./client/src/assets/fonts"
          ],
          [
            "@icons",
            "./client/src/assets/icons"
          ],
          [
            "@images",
            "./client/src/assets/images"
          ],
          [
            "@css",
            "./client/src/css"
          ],
          [
            "@store",
            "./client/src/store/store.js"
          ]
        ],
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  }
}