{
  "extends": "airbnb",
  "ignorePatterns": ["bundle.js", "tailwind.config.js"],
  "no-param-reassign": ["error", {
    "props": true,
    "ignorePropertyModificationsFor": [
      "state"
    ]
  }],
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@components", "./client/src/components"],
          ["@actions", "./client/src/actions"],
          ["@assets", "./client/src/assets"],
          ["@lib", "./client/src/lib"],
          ["@reducers", "./client/src/reducers"],
          ["@fonts", "./client/src/public/fonts"],
          ["@icons", "./client/src/public/icons"],
          ["@images", "./client/src/public/images"]
        ],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
